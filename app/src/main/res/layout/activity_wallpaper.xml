                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="c10"
                    app:cardCornerRadius="70dp">

                    <ImageView
                        android:id="@+id/ivbg10"
                        android:layout_width="203dp"
